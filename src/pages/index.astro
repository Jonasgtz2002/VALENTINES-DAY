		const giftBtn = document.getElementById('gift-btn') as HTMLButtonElement;
		const giftModal = document.getElementById('gift-modal') as HTMLElement;
		const closeModal = document.getElementById('close-modal') as HTMLButtonElement;
		const buttonsContainer = document.querySelector('.buttons-container') as HTMLElement;
		const countdownElement = document.getElementById('countdown') as HTMLElement;

		// Funci√≥n para calcular d√≠as hasta el 14 de febrero
		function updateCountdown() {
			const today = new Date();
			const currentYear = today.getFullYear();
			let valentineDay = new Date(currentYear, 1, 14); // Mes 1 = febrero (0-indexed)
			
			// Si ya pas√≥ el 14 de febrero de este a√±o, calcular para el pr√≥ximo a√±o
			if (today > valentineDay) {
				valentineDay = new Date(currentYear + 1, 1, 14);
			}
			
			// Calcular diferencia en milisegundos
			const diffTime = valentineDay.getTime() - today.getTime();
			const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
			
			countdownElement.textContent = diffDays.toString();
			
			// Si es el mismo d√≠a
			if (diffDays === 0) {
				countdownElement.textContent = '¬°HOY! üíù';
			}
		}

		// Actualizar contador al cargar
		updateCountdown();
		
		// Actualizar cada minuto
		setInterval(updateCountdown, 60000);

		// Funci√≥n para mover el bot√≥n "No" cuando el mouse se acerca
		function moveNoButton(e: MouseEvent) {
			const rect = noBtn.getBoundingClientRect();
			const btnCenterX = rect.left + rect.width / 2;
			const btnCenterY = rect.top + rect.height / 2;
			
			const distance = Math.sqrt(
				Math.pow(e.clientX - btnCenterX, 2) + 
				Math.pow(e.clientY - btnCenterY, 2)
			);

			// Si el mouse est√° cerca (menos de 150px)
			if (distance < 150) {
				const containerRect = buttonsContainer.getBoundingClientRect();
				
				// Generar nueva posici√≥n aleatoria dentro del contenedor
				const maxX = window.innerWidth - rect.width - 40;
				const maxY = window.innerHeight - rect.height - 40;
				
				const newX = Math.random() * maxX;
				const newY = Math.random() * maxY;
				
				noBtn.style.position = 'fixed';
				noBtn.style.left = newX + 'px';
				noBtn.style.top = newY + 'px';
				noBtn.style.transition = 'all 0.3s ease';
			}
		}

		// Agregar evento de movimiento del mouse
		document.addEventListener('mousemove', moveNoButton);

		// Tambi√©n mover el bot√≥n cuando se intenta hacer click
		noBtn.addEventListener('click', (e) => {
			e.preventDefault();
			moveNoButton(e as any);
		});

		// Bot√≥n "S√≠"
		yesBtn.addEventListener('click', () => {
			successMessage.classList.remove('hidden');
			buttonsContainer.style.display = 'none';
			
			// Confeti usando emojis
			createConfetti();
		});

		// Funci√≥n para crear confeti
		function createConfetti() {
			const confettiEmojis = ['üíï', 'üíñ', 'üíù', '‚ù§Ô∏è', 'üíó', 'üíì', 'üíû', 'üéâ', '‚ú®', '‚≠ê'];
			
			for (let i = 0; i < 50; i++) {
				const confetti = document.createElement('div');
				confetti.textContent = confettiEmojis[Math.floor(Math.random() * confettiEmojis.length)];
				confetti.style.position = 'fixed';
				confetti.style.left = Math.random() * 100 + '%';
				confetti.style.top = '-50px';
				confetti.style.fontSize = (Math.random() * 20 + 20) + 'px';
				confetti.style.zIndex = '9999';
				confetti.style.pointerEvents = 'none';
				confetti.style.animation = `fall ${Math.random() * 3 + 2}s linear`;
				
				document.body.appendChild(confetti);
				
				setTimeout(() => confetti.remove(), 5000);
			}
		}

		// Agregar animaci√≥n de ca√≠da
		const style = document.createElement('style');
		style.textContent = `
			@keyframes fall {
				to {
					transform: translateY(100vh) rotate(360deg);
					opacity: 0;
				}
			}
		`;
		document.head.appendChild(style);

		// Modal del regalo
		giftBtn.addEventListener('click', () => {
			giftModal.classList.remove('hidden');
		});

		closeModal.addEventListener('click', (e) => {
			e.preventDefault();
			e.stopPropagation();
			giftModal.classList.add('hidden');
		});

		giftModal.addEventListener('click', (e) => {
			if (e.target === giftModal) {
				giftModal.classList.add('hidden');
			}
		});
	</script>
